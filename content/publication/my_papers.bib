@article{brinkerhoffConstrainingRemoteRiver2020,
  title = {Constraining {{Remote River Discharge Estimation Using Reach-Scale Geomorphology}}},
  author = {Brinkerhoff, C.B. and Gleason, C. J. and Feng, D. and Lin, P.},
  year = {2020},
  month = nov,
  journal = {Water Resources Research},
  volume = {56},
