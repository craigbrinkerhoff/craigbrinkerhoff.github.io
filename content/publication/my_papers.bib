@article{maavaraDoesPhotomineralizationDissolved2021,
  title = {Does {{Photomineralization}} of {{Dissolved Organics Matter}} in {{Temperate Rivers}}?},
  author = {Maavara, T. and Logozzo, L.A. and Stubbins, A. and Aho, K.S. and Brinkerhoff, C.B. and Hosen, J.D. and Raymond, P.A.},
  year = {2021},
  month = jun,
  journal = {Journal of Geophysical Research: Biogeosciences},
  volume = {126},
  number = {7},
  pages = {e2021JG006402},
