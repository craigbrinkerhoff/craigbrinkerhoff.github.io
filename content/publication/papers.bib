	journal = {Global Biogeochemical Cycles},
	author = {Liu, S. and Maavara, T.M. and Brinkerhoff, C.B. and Raymond, P.A.},
	year = {2022},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2021GB007278},
	keywords = {dissolved organic carbon, river networks, dams, water residence time, global warming, Damköhler number},
	pages = {e2021GB007278},
	annote = {e2021GB007278 2021GB007278},
