	year = {2021},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2020GL090068},
	keywords = {hydrology, CO2, biogeochemistry, river network, biogeochemistry; CO2; greenhouse gas; hydrology; river network; streamflow routing, greenhouse gas, streamflow routing},
	pages = {e2020GL090068},
	file = {Full Text PDF:C\:\\Users\\craig\\Zotero\\storage\\CEMVH6LD\\Brinkerhoff et al. - 2021 - Lake Morphometry and River Network Controls on Eva.pdf:application/pdf;Snapshot:C\:\\Users\\craig\\Zotero\\storage\\AXRRPGTF\\2020GL090068.html:text/html},
